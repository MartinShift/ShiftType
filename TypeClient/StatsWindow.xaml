                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="FontSize" Value="40" />
                                    <Setter Property="FontFamily" Value="Nexa" />
                                    <Setter Property="FontStyle" Value="Italic" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Details">
                <Grid Background="#333333">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="20*"></ColumnDefinition>
                        <ColumnDefinition Width="20*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25*"></RowDefinition>
                        <RowDefinition Height="25*"></RowDefinition>
                        <RowDefinition Height="25*"></RowDefinition>
                        <RowDefinition Height="25*"></RowDefinition>
                        <RowDefinition Height="25*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel  Grid.ColumnSpan="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="45" FontFamily="Nexa" Text="Overall words typed: " TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBlock  Text="{Binding Path=OverallWordsTyped}" Foreground="#E9D8D8" FontSize="65" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                    </StackPanel>
                    <StackPanel  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="40" FontFamily="Nexa" Text="Tests Completed" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBlock  Text="{Binding Path=Client.TestCount}" Foreground="#E9D8D8" FontSize="60" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                    </StackPanel>
                    <StackPanel  Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="40" FontFamily="Nexa" Text="Time Typing" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBlock  Text="{Binding Path=Client.TypingTime}" Foreground="#E9D8D8" FontSize="60" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                    </StackPanel>
                    <StackPanel  Grid.Column="0" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="35" FontFamily="Nexa" Text="Highest Wpm" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBlock  Text="{Binding Path=HightestWpm}" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                    </StackPanel>
                    <StackPanel  Grid.Column="1" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="35" FontFamily="Nexa" Text="Average Wpm" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBlock  Text="{Binding Path=AverageWpm}" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                    </StackPanel>
                    <StackPanel  Grid.Column="2" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="35" FontFamily="Nexa" Text="Average Wpm(Last 10 tests)" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBlock  Text="{Binding Path=AverageLast10Wpm}" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                    </StackPanel>
                    <StackPanel  Grid.Column="0" Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="35" FontFamily="Nexa" Text="Highest Acc" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Text="{Binding Path=HightestAcc}" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                            <TextBlock  Text="%" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel  Grid.Column="1" Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="35" FontFamily="Nexa" Text="Average Acc" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Text="{Binding Path=AverageAcc}" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                            <TextBlock  Text="%" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel  Grid.Column="2" Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Foreground="#4c4c4c" FontSize="35" FontFamily="Nexa" Text="Average Acc(last 10 tests)" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Text="{Binding Path=AverageLast10Acc}" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                            <TextBlock  Text="%" Foreground="#E9D8D8" FontSize="55" FontFamily="Nexa" FontWeight="DemiBold"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
